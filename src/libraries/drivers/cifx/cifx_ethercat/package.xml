<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">

    <!-- Package's name -->
    <name>cifx_ethercat</name>
    <!-- Package's version -->
    <version>1.0.0</version>
    <!-- Package's description -->
    <description>
    
    CIFX/netX interface implementation of the EtherCAT master driver library based on the ethercat package

    </description>
    <!-- Package's author -->
    <author email="krzysztof.pierczyk@gmail.com">Krzysiek Pierczyk</author>
    <!-- Package's maintainer -->
    <maintainer email="krzysztof.pierczyk@gmail.com">Krzysiek Pierczyk</maintainer>
    <!-- Package's license -->
    <license>BSD</license>
    
    <!-- Build tool dependencies -->
    <buildtool_depend>ament_cmake</buildtool_depend>
    <buildtool_depend>cmake_common</buildtool_depend>
    <buildtool_depend>doc_common</buildtool_depend>
    <!-- Package's build export dependencies -->
    <build_export_depend>package_common_cpp</build_export_depend>
    <build_export_depend>ethercat</build_export_depend>
    <build_export_depend>cifx_toolkit</build_export_depend>
    <!-- Package's build export dependencies (external libraries) -->
    <build_export_depend>libboost-dev</build_export_depend>
    <build_export_depend>librange-v3-dev</build_export_depend>
    <!-- Dependencies -->
    <build_depend>package_common_cpp</build_depend>
    <build_depend>ethercat</build_depend>
    <build_depend>cifx_toolkit</build_depend>
    <!-- Package's build dependencies (external libraries) -->
    <build_depend>libboost-dev</build_depend>
    <build_depend>librange-v3-dev</build_depend>
    <!-- Runtime dependencies -->
    <exec_depend>package_common_cpp</exec_depend>
    <exec_depend>ethercat</exec_depend>
    <exec_depend>cifx_toolkit</exec_depend>
    <!-- Package's runtime dependencies (external libraries) -->
    <exec_depend>librange-v3</exec_depend>
    <exec_depend>libboost-dev</exec_depend>
    <!-- Test dependencies -->
    <test_depend>ament_cmake_gtest_ext</test_depend>
    <test_depend>package_common_cpp</test_depend>

    <!-- ================================================================================================= -->
    <!-- @note 'librange-v3-dev' rosdep System Dependency not yet supported in ROS2 Galaxy (Ubuntu Focal); -->
    <!--       requires manual downloading                                                                 -->
    <!-- ================================================================================================= -->

    <!-- Package's exports -->
    <export>
      <build_type>ament_cmake</build_type>
    </export>

</package>
